{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "description": "React Boilerplate for new projects",
  "main": "index.tsx",
  "scripts": {
    "build": "webpack --config webpack.config.prod.js",
    "dev": "webpack-dev-server --open --watch --config webpack.config.dev.js",
    "dev:hot": "npm run dev -- --hot",
    "test": "jest",
    "format": "pretty-quick",
    "lint": "tslint --project ./"
  },
  "husky": {
    "pre-commit": "pretty-quick --staged && npm run lint && npm run test"
  },
  "author": "Youssef Meskini",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ymeskini/react-boilerplate.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/ymeskini/react-boilerplate/issues"
  },
  "homepage": "https://github.com/ymeskini/react-boilerplate#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^23.3.12",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-dom": "^3.0.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "react-hot-loader": "^4.6.3",
    "react-testing-library": "^5.4.4",
    "style-loader": "^0.23.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2",
    "webpack": "^4.28.4",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  }
}
